    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.springframework.cache" level="WARN"/>
    <logger name="org.thymeleaf" level="WARN"/>
    <logger name="org.xnio" level="WARN"/>
    <logger name="springfox" level="WARN"/>
    <logger name="sun.rmi" level="WARN"/>
    <logger name="liquibase" level="WARN"/>
    <logger name="LiquibaseSchemaResolver" level="INFO"/>
    <logger name="sun.net.www" level="INFO"/>
    <logger name="sun.rmi.transport" level="WARN"/>

    <logger name="org.springframework.jdbc.core.StatementCreatorUtils"
            additivity="false" level="INFO">
    </logger>
    <logger name="org.springframework.jdbc.core" additivity="true" level="INFO">
    </logger>
    <logger name="java.sql.Connection" additivity="true" level="INFO">
    </logger>
    <logger name="java.sql.Statement" additivity="true" level="INFO">
    </logger>
    <logger name="java.sql.PreparedStatement" additivity="true" level="INFO">
    </logger>
    <logger name="java.sql.ResultSet" additivity="true" level="INFO">
    </logger>
    <logger name="org.quartz.core" additivity="true" level="INFO">
    </logger>
    <logger name="com.ctg.itrdc.cache" additivity="true" level="ERROR">
    </logger>
    <logger name="com.hazelcast" additivity="true" level="ERROR">
    </logger>
    <logger name="com.ulisesbocchio.jasyptspringboot" additivity="true" level="ERROR">
    </logger>


    <!-- https://logback.qos.ch/manual/configuration.html#shutdownHook and https://jira.qos.ch/browse/LOGBACK-1090 -->
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

</configuration>
